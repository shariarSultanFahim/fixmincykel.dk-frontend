{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/tailwind": ["./src/styles/tailwind.css"],
      "@/components/*": ["./src/components/*"],
      "@/layouts": ["./src/components/layouts"],
      "@/layouts/*": ["./src/components/layouts/*"],
      "@/widgets": ["./src/components/widgets"],
      "@/widgets/*": ["./src/components/widgets/*"],
      "@/ui": ["./src/components/ui"],
      "@/ui/*": ["./src/components/ui/*"],
      "@/hooks": ["./src/hooks"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/data": ["./src/data"],
      "@/data/*": ["./src/data/*"],
      "@/schemas": ["./src/schemas"],
      "@/schemas/*": ["./src/schemas/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/providers/*": ["./src/providers/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "src/types"
  ],
  "exclude": ["node_modules"]
}
